@using ListingTodos.Models
@model ViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Todo</title>
</head>
<body>
    <h1>Detail</h1>
    <b>@Html.Label("Todo description:")</b> @Html.Raw(Model.Todo.Title)<br />
    <b>@Html.Label("Urgent:")</b> @Html.Raw(Model.Todo.IsUrgent)<br />
    <b>@Html.Label("Done:")</b> @Html.Raw(Model.Todo.IsDone)<br />
    <a href="/">Back</a>
</body>
</html>